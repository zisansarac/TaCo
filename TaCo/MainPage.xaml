<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TaCo.ViewModels"
             x:Class="TaCo.MainPage"
             BackgroundColor="#FAFAFA">

  

    <Grid RowDefinitions="*, Auto" Padding="20">

        <Frame Grid.Row="0"
               BackgroundColor="{Binding AktifKart.KartRengi}"
               CornerRadius="20"
               HasShadow="True"
               BorderColor="Transparent"
               VerticalOptions="Center"
               HeightRequest="400"
               Padding="30">

            <StackLayout VerticalOptions="Center" Spacing="20">
                <Label Text="{Binding AktifKart.KonuBasligi}"
                       TextColor="#555"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextTransform="Uppercase"
                       CharacterSpacing="2"/>

                <Label Text="{Binding AktifKart.SoruMetni}"
                       TextColor="#222"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <Label x:Name="CevapLabel"
                       Text="{Binding AktifKart.CevapMetni}"
                       TextColor="#D81B60"
                       FontSize="24"
                       FontAttributes="Italic"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       IsVisible="False" />

                <Label x:Name="TiklaYazisi"
                       Text="(Cevabı görmek için dokun)"
                       TextColor="#888"
                       FontSize="12"
                       HorizontalOptions="Center"
                       Margin="0,20,0,0"/>
            </StackLayout>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnKartTapped"/>
            </Frame.GestureRecognizers>
        </Frame>

        <HorizontalStackLayout Grid.Row="1" Spacing="20" HorizontalOptions="Center" Margin="0,30,0,20">

            <Button Text="Sıradaki Soru ->" 
                    Clicked="OnSiradakiClicked" 
                    BackgroundColor="#5C6BC0" 
                    TextColor="White"
                    CornerRadius="25" 
                    HeightRequest="50"
                    Padding="20,0"/>

        </HorizontalStackLayout>

    </Grid>
</ContentPage>